{
  "extends": "./tsconfig.settings",
  "include": ["./exports", "./package.json", "./src", "./typings"],
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "./dist",

    "paths": {
      "@sanity/tsdoc/runtime": ["./exports/runtime.ts"],
      "@sanity/tsdoc/react": ["./exports/react.ts"],
      "@sanity/tsdoc": ["./exports/index.ts"]
    },

    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true
  }
}
