{
  "extends": "../tsconfig.settings",
  "include": [
    "./next-env.d.ts",
    "./sanity-env.d.ts",
    "./sanity.config.ts",
    "./src",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",

    "target": "ES2017",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "incremental": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "plugins": [{"name": "next"}],

    "paths": {
      "sanity.config": ["./sanity.config.ts"]
    },

    "isolatedModules": true,
    "noEmit": true
  }
}
