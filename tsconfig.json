{
  "extends": "./tsconfig.settings",
  "include": [
    "./eslintrc.js",
    "./exports",
    "./package.config.ts",
    "./package.json",
    "./scripts",
    "./src",
    "./test",
    "./tsdoc.config.ts",
    "./typings",
    "./workshop"
  ],
  "exclude": ["./test/__tmp__", "./dist", "./workshop/dist"],
  "compilerOptions": {
    "composite": true,

    "rootDir": ".",
    "outDir": "./dist",

    "paths": {
      "@sanity/tsdoc/cli": ["./exports/cli.ts"],
      "@sanity/tsdoc/react": ["./exports/react.ts"],
      "@sanity/tsdoc/store": ["./exports/store.ts"],
      "@sanity/tsdoc": ["./exports/index.ts"]
    },

    "checkJs": true,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "references": [
    {"path": "./playground/multi-export"},
    {"path": "./playground/multi-export-legacy"},
    {"path": "./playground/multi-export-cjs"},
    {"path": "./playground/multi-export-cjs-legacy"},
    {"path": "./playground/mylib"},
    {"path": "./playground/ts"}
  ]
}
