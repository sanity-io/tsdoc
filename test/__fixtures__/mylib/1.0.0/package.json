{
  "name": "mylib",
  "version": "1.0.0",
  "license": "MIT",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.ejs",
  "types": "./lib/dts/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "require": "./lib/cjs/index.ks",
      "default": "./lib/esm/index.ks"
    }
  },
  "scripts": {
    "build": "yarn build:cjs && yarn build:esm && tsc --build -f tsconfig.build.json",
    "build:cjs": "tsc --project tsconfig.lib.json --outDir lib/cjs/ --rootDir src/",
    "build:esm": "tsc --project tsconfig.lib.json --outDir lib/esm/ --rootDir src/",
    "prebuild": "rimraf lib/"
  },
  "devDependencies": {
    "@types/react": "^18.0.18",
    "react": "^18.2.0",
    "typescript": "^4.8.2"
  }
}
