  "main": "./lib/cjs/index.d.ts",
  "module": "./lib/esm/index.d.ts",
  "types": "./lib/dts/src/index.d.ts",
  "scripts": {
    "build": "yarn build:cjs && yarn build:esm && tsc --build -f tsconfig.build.json",
